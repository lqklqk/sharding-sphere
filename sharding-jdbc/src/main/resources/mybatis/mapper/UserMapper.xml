<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lqk.shardingjdbc.dao.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.lqk.shardingjdbc.dao.entity.User">
        <result column="userid" property="userid" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="password_cipher" property="passwordCipher" jdbcType="VARCHAR"/>
        <result column="userstatus" property="userstatus" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="BIGINT"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column">
        userid, username, password, password_cipher, userstatus, age, sex
    </sql>
    <insert id="insert">
        insert into user (username, password, userstatus, age, sex)
        values (#{username}, #{password}, #{userstatus}, #{age}, #{sex})
    </insert>
    <select id="selectByPassword" resultMap="BaseResultMap">
        select <include refid="Base_Column"/>
            from user where password = #{password}
    </select>
</mapper>